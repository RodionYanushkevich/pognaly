mixin catalog-cards(catalogData)
  - const icons = [{name: "plane", tooltip: "Самолет"}, {name: "car", tooltip: "Автомобиль"}, {name: "bike", tooltip: "Велосипед"}, {name: "walk", tooltip: "Пешком"}]

  section.catalog-cards
    .container
      h2.catalog-cards__title.visually-hidden Карточки попутчиков
      .catalog-cards__form-container
        +catalog-form()
      .catalog-cards__container
        ul.catalog-cards__list
          each card in catalogData
            li.catalog-cards__list-item
              .catalog-cards__cards.catalog-card(data-el="catalog-card")
                .catalog-card__image-wrapper
                  +adaptivePicture({
                    path:"content/catalog/cards",
                    imageBaseName: card.photo,
                    width: 285,
                    height: 285,
                    hasTablet:true,
                    TabletWidth: 190,
                    TabletHeight: 190,
                    hasMobile:true,
                    mobileWidth: 70,
                    mobileHeight: 70,
                    alt:`${card.name} - фотография`
                    })
                span.catalog-card__online(class= card.online ? "catalog-card__online--true" : '')
                h3.catalog-card__title!=card.name
                p.catalog-card__description!=card.hashTags
                ul.catalog-card__flags-list
                  each flag in card.countriesFlags
                    li.catalog-card__flags-list-item
                      +img("content/flags", `${flag.icon}-flag`, "webp", 35, 24, "")
                      p.catalog-card__flags-description=flag.description
                if typeof card.likes !== 'undefined'
                  .catalog-card__buttons-container
                    a.catalog-card__call-button.btn(href="#")
                      span позвать
                    .catalog-card__likes-button-wrapper
                      button.catalog-card__likes-button(type="button", aria-label="поставить лайк", data-button="catalog-card-like")
                        +icon("heart", 20, 19)
                        +icon("heart-fill", 20, 19)
                      span.catalog-card__likes-count= card.likes
                ul.catalog-card__transport-list
                  each icon in icons
                    - const isChecked = card.travelIconCheck.includes(icon.name)
                    li
                      if isChecked
                        +icon(`${icon.name}-icon`, 25, 25).catalog-card__icon.catalog-card__icon--checked
                      else
                        +icon(`${icon.name}-icon`, 25, 25).catalog-card__icon
                      +tooltip(icon.tooltip)
                div.catalog-card__level.level(style=`--level: ${card.level}` data-level=card.level)

                  span.level__dote.level__dote--min
                  span.level__wrapper
                  .level__description-container
                    span.level__count!=card.level
                    span.level__description level
        button.catalog-cards__more-button(type="button")
          +icon("plus-icon", 26, 26)
          span показать еще
        .catalog-cards__padination-wrapper
          ul.catalog-cards__padination-list.catalog-cards__padination-list--buttons
            li.catalog-cards__padination-list-item
              button.catalog-cards__padination-button.is-active(type="button", data-button="pagination-button") 1
            li.catalog-cards__padination-list-item
              button.catalog-cards__padination-button(type="button", data-button="pagination-button") 2
            li.catalog-cards__padination-list-item
              button.catalog-cards__padination-button(type="button", data-button="pagination-button") 3
            li.catalog-cards__padination-list-item
              button.catalog-cards__padination-button(type="button", data-button="pagination-button") 4

          ul.catalog-cards__padination-list
            li.catalog-cards__padination-list-item
              button.catalog-cards__padination-button.catalog-cards__padination-button--arrow(type="button", aria-label="Предыдущая страница", data-button="pagination-arrow")
                +icon("arrow-icon", 20, 13)
            li.catalog-cards__padination-list-item
              button.catalog-cards__padination-button.catalog-cards__padination-button--arrow.catalog-cards__padination-button--next(type="button", aria-label="Следующая страница", data-button="pagination-arrow")
                +icon("arrow-icon", 20, 13)

