mixin directions()
  -
    const countries = [
      {
        name: "Тайланд",
        description: "Джунгли зовут!",
        followersCount: "18321",
        flag: "thai-flag",
        image: "thai-image"
      },
      {
        name: "Франция",
        description: "Трэ бьен, манифик!",
        followersCount: "12518",
        flag: "france-flag",
        image: "france-image"
      },
      {
        name: "Чехия",
        description: "Закоулки старой Европы",
        followersCount: "5326",
        flag: "czech-flag",
        image: "czech-image"
      },
    ]

  section.directions
    .container
      .directions__description-wrapper
        h2.directions__title Направления
        p.directions__description
          | Мы&nbsp;не&nbsp;продаем туры и&nbsp;ничего не&nbsp;рекламируем.
          | Люди сами пишут о&nbsp;странах, куда хотели&nbsp;бы отправиться и&nbsp;чем можно там заняться.
        +btn({
          href: "#",
          text:"Показать все"}).directions__link
      .directions__swiper-wrapper
        .directions__swiper(data-swiper="directions")
          ul.directions__list
            each country in countries
              li.directions__card-item
                .directions-card
                  .directions-card-wrapper
                    h3.directions-card__title!=country.name
                    p.directions-card__description!=country.description
                    .directions-card__icon-wrapper
                      +icon("user-icon",20,20)
                      p.directions-card__folowes!=country.followersCount
                  .directions-card-image-wrapper
                    svg(width="70", height="47", aria-hidden="true")
                      use(xlink:href=`img/content/flags/${country.flag}.svg`)
                    +adaptivePicture({
                      path:"content/directions",
                      imageBaseName: country.image,
                      width: 186,
                      height: 140,
                      hasTablet:false,
                      hasMobile:true,
                      mobileWidth: 270,
                      mobileHeight: 111,
                      alt:"изображение города"
                      })

