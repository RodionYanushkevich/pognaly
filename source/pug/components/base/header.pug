mixin header(headerMods, currentUrl)
  -
    const headerLinks = [
      {
        href: "about.html",
        text: "о сервисе"
      },
      {
        href: "directions.html",
        text: "направления"
      },
      {
        href: "companions.html",
        text: "попутчики"
      },
    ]

  header.header(class=headerMods)
    .container

      if(currentUrl === "index.html")
        span.header__logo.logo( data-logo="header-logo")
          img(src="../../../img/svg/logo.svg", width="200", height="50", alt="Логотип Погнали", )
          span.logo-description
            +icon("logo-text", 133, 25 )
      else
        a.header__logo.logo(href="index.html", aria-label="Переход на главную", data-logo="header-logo")
          img(src="../../../img/svg/logo.svg", width="200", height="50", alt="Логотип Погнали")
          span.logo-description
            +icon("logo-text", 133, 25 )

      nav.main-nav.header__nav(data-navigation ="navigation")
        button.main-nav__toggle.main-nav__toggle--is-closed(type="button", aria-label="Переключатель отображения меню", aria-pressed="false", data-button="navigation-button")
          +icon("icon-burger", 20, 20)
          +icon("icon-close", 20, 20)
        .main-nav__container
          ul.main-nav__list
            each link in headerLinks
              - const activeState = currentUrl === link.href
              li.main-nav__item
                if(activeState)
                  span.main-nav__link.is-active= link.text
                else
                  a.main-nav__link(href=link.href)= link.text
            ul.main-nav__contacts-list
              li.main-nav__contacts-list-item
                a.main-nav__contacts-link(
                  href="tel:+78005558628",
                  aria-label="Позвонить 8 800 555-86-28",
                  title="Позвонить нам")
                    +icon("header-phone", 18, 18)
              li.main-nav__contacts-list-item
                a.main-nav__contacts-link(
                  href="mailto:example@mail.com",
                  aria-label="Написать на example@mail.com",
                  title="Написать на example@mail.com")
                    +icon("header-mail", 18, 18)
